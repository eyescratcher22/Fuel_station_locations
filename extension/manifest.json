{
  "manifest_version": 3,
  "name": "PERM Web Extension",
  "version": "0.0.1",
  "description": "Copies the link of the current website into my local file directly",
  "permissions": ["activeTab", "scripting", "file://*/*"],
  "host_permissions": ["file://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png"
    }
  }
}
